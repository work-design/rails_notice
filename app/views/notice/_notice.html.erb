<div class="level is-underline">
  <div class="level-left">
    <i class="fas fa-bell"></i>
    <%= link_to url_my_notification_path(notification) do %>
      <%= notification.title %>
      <%= notification.body %>
    <% end %>
  </div>
  <div class="level-right">
    <div class="level-item"><time><%= notification.created_at.to_s(:rfc822) %></time></div>
  </div>
</div>
