<td><%= image_tag model.cover.variant(resize_to_limit: [100, 100]) if model.cover.present? %></td>
<td><%= model.type_i18n %></td>
<td>
  <h6><%= model.title %></h6>
  <p><%= model.body %></p>
</td>
<td><%= model.link %></td>
<td>
  <p><%= link_to model.notifications_count, admin_notifications_path(notifiable_type: model.class_name, notifiable_id: model.id) %></p>
  <p class="has-text-success"><%= model.readed_count %></p>
</td>
<td><time data-controller="time"><%= model.created_at.to_s(:rfc822) %></time></td>
<td class="tags">
  <% model.annunciates.each do |annunciate| %>
    <div class="tag"><%= annunciate.department&.name %></div>
  <% end %>
  <%= link_to user_admin_annunciation_path(model), aria: { label: t('.publish') }, class: 'button is-small is-rounded is-link' do %>
    <i class="fas fa-bullhorn"></i>
  <% end if model.is_a?(UserAnnunciation) %>
  <%= link_to member_admin_annunciation_path(model), aria: { label: t('.publish') }, class: 'button is-small is-rounded is-link' do %>
    <i class="fas fa-bullhorn"></i>
  <% end if model.is_a?(MemberAnnunciation) %>
</td>
