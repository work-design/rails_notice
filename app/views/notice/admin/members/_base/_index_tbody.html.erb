<td>
  <p><%= model.name %></p>
  <p class="text-grey"><%= model.identity %></p>
</td>
<td><%= model.showtime %></td>
<td>
  <%= form_with theme: nil, model: model, url: { action: 'update', id: model.id }, data: { controller: 'input' } do |f| %>
    <%= f.check_box :accept_email, data: { input_target: 'checkbox' }, id: nil, class: 'switch is-rounded' %>
    <label data-action="click->input#check"></label>
  <% end %>
</td>
<td>
<% model.notifiable_types.each do |notifiable_type| %>
  <p><span class="tag"><%= notifiable_type %></span></p>
<% end %>
</td>
<td><pre><%= model.counters.to_format_yaml %></pre></td>
