<tr>
  <td><%= member.user_id %></td>
  <td><%= member.showtime %></td>
  <td>
    <div class="ui toggle checkbox">
      <%= check_box_tag '[member]accept_email', nil, member.accept_email, data: { method: :patch, url: admin_member_path(member), submit: true }, id: nil %>
    </div>
  </td>
  <td class="tags">
    <% member.notifiable_types.each do |notifiable_type| %>
      <span class="tag"><%= notifiable_type %></span>
    <% end %>
  </td>
  <td>
    <%= simple_format(member.counters) %>
  </td>
  <td>
    <%= link_to admin_member_path(member), aria: { label: t('.show') }, class: 'button is-small is-rounded is-light' do %>
      <i class="fas fa-info"></i>
    <% end %>
    <%= link_to({ action: 'edit', id: member.id }, aria: { label: t('.edit') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>
  </td>
</tr>
