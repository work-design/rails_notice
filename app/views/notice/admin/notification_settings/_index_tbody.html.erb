<tr>
  <td><%= notification_setting.user_id %></td>
  <td><%= notification_setting.showtime %></td>
  <td>
    <div class="ui toggle checkbox">
      <%= check_box_tag '[notification_setting]accept_email', nil, notification_setting.accept_email, data: { method: :patch, remote: true, url: admin_notification_setting_path(notification_setting), submit: true }, id: nil %>
    </div>
  </td>
  <td class="tags">
    <% notification_setting.notifiable_types.each do |notifiable_type| %>
      <span class="tag"><%= notifiable_type %></span>
    <% end %>
  </td>
  <td>
    <%= simple_format(notification_setting.counters) %>
  </td>
  <td>
    <%= link_to admin_notification_setting_path(notification_setting), aria: { label: t('.show') }, remote: true, class: 'button is-small is-rounded is-light' do %>
      <i class="fas fa-info"></i>
    <% end %>
    <%= link_to edit_admin_notification_setting_path(notification_setting), aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light' do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>
    <%= link_to admin_notification_setting_path(notification_setting), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, remote: true, class: 'button is-small is-rounded is-light' do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </td>
</tr>
